---
import { Code } from "@lucide/astro/icons/index"

const {title, icon, id}= Astro.props
---

<section id={id} class="container mx-auto w-full max-w-5xl px-4  flex flex-col justify-start gap-4 md:gap-8">
    <strong class="text-md md:text-2xl xl:text-4xl flex gap-2 items-center">
        {!icon ? "" : <Code class='size-6 xl:size-8'/>} {title}</strong>

    <slot/>
</section>
